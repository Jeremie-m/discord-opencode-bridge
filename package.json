{
  "name": "discord-opencode-bridge",
  "version": "0.1.0",
  "type": "module",
  "description": "Bridge between Discord and OpenCode - Control OpenCode from your phone via Discord",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "serve": "node scripts/start.js",
    "serve:dev": "concurrently -n opencode,bridge -c blue,green \"opencode serve --port 4096\" \"tsx watch src/index.ts\"",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "discord",
    "opencode",
    "bot",
    "bridge",
    "ai",
    "terminal"
  ],
  "author": "Jérémie MARIE (4uu.dev)",
  "license": "MIT",
  "dependencies": {
    "concurrently": "^9.2.1",
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "strip-ansi": "^7.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
